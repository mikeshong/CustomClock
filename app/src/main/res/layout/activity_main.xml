<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <com.mikeshong.mii.customclock.SmallClock
            android:layout_width="100dp" android:layout_height="100dp"
            app:time="80.0"
            android:id="@+id/small_one"


            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/small_one2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:visibility="visible"
            />

    <com.mikeshong.mii.customclock.SmallClock
            android:layout_width="100dp" android:layout_height="100dp"
            app:time="100.0"
            android:id="@+id/small_one2"
            app:layout_constraintLeft_toRightOf="@id/small_one"
            app:layout_constraintRight_toRightOf="@id/small_one3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

    <com.mikeshong.mii.customclock.SmallClock
    android:layout_width="100dp" android:layout_height="100dp"
    app:time="100.0"
    android:id="@+id/small_one3"
    app:layout_constraintLeft_toRightOf="@id/small_one2"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_chainStyle="packed"
    />
    <com.mikeshong.mii.customclock.SmallClock
            android:layout_width="100dp" android:layout_height="100dp"
            app:time="100.0"
            android:id="@+id/small_one4"
            app:layout_constraintLeft_toRightOf="@id/small_one3"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
    />
    <Button
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/button"
            android:text="Hit me"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    />

</androidx.constraintlayout.widget.ConstraintLayout>